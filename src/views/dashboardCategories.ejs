<%- include("./partials/dashboard.ejs") %>

<main>

    <section>
        <nav class="dashboard-products-buttons" >

            <button onclick="toggleElement(1)">
                Estados
            </button>

            <button onclick="toggleElement(2)">
                Categorías
            </button>
            
        </nav>

        <div class="dashboard-products hidden" id="dashboard-details">

            <div class="form-box cat-stat">
                <form action="/dashboard/newStatus" method="post" class="form-content-box cat-stat">
                    <div class="form-input-label-box">
                        <label class="form-label-product" id="newStatus">
                            Nuevo estado
                        </label>
                        <input type="text" class="form-input-product" id="newStatus" name="newStatus">
                    </div>
                    <div class="dashboard-products-buttons">
                        <button type="submit">
                            Agregar
                        </button>
                    </div>
                    
                </form>
            </div>

            <div class="table-responsive table-cat-status">
                <table class="table table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th colspan="2">Estados</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const status of statuses) { %>
                            <tr>
                                <td><%= status.status %></td>
                                <td class="table-button">
                                    <a href="/dashboard/category/<%= status.id %>" class="dashboard-products-buttons">
                                        <button>
                                            Editar
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>

        <div class="dashboard-products" id="dashboard-table" >

                <div class="form-box cat-stat">
                    <form action="/dashboard/newCategory" method="post" class="form-content-box cat-stat">
                        <div class="form-input-label-box">
                            <label class="form-label-product" for="newCat">
                                Nueva Categoría
                            </label>
                            <input type="text" class="form-input-product" id="newCat" name="newCat">
                        </div>
                        <div class="dashboard-products-buttons">
                            <button type="submit">
                                Agregar
                            </button>
                        </div>
                        
                    </form>
                </div>

            <div class="table-responsive table-cat-status">
                <table class="table table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th colspan="2">Categorías</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const category of categories) { %>
                            <tr>
                                <td><%= category.category %></td>
                                <td class="table-button">
                                    <a href="/dashboard/category/<%= category.id %>" class="dashboard-products-buttons">
                                        <button>
                                            Editar
                                        </button>
                                    </a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>

        </div>

    </section>
</main>
</body>
</html>