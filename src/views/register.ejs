<%- include("./partials/head.ejs") %>
<body class="register-form">
    
    <%- include("./partials/header.ejs") %>

    <main>

        <form action="/register" method="post" class="form-frame">
            
            <div class="form-item">
                <label for="name">Nombre y apellido</label>
                <input class="form-field" type="text" id="name" name="name" required minlength="3" maxlength="30" placeholder="Tony Stark">
            </div>

            <div class="form-item">
                <label for="username">Nombre de usuari@</label>
                <input class="form-field" type="text" id="username" name="username" required minlength="3" maxlength="15" placeholder="IronMan">
            </div>

            <div class="form-item">
                <label for="borndate">Fecha de nacimiento</label>
                <input class="form-field" type="date" id="borndate" name="borndate" required>
            </div>

            <div class="form-item">
                <label for="address">Domicilio</label>
                <input class="form-field" type="text" id="address" name="address" placeholder="Calle Falsa 123">
            </div>

            <div class="form-item">
                <label>Perfil del usuario</label>
                    <div class="form-radio">
                        <input  type="radio" id="buyer" name="profile" value="buyer" checked>
                        <label for="buyer">Comprador</label>
                    </div>

                    <div class="form-radio">
                        <input  type="radio" id="seller" name="profile" value="seller">
                        <label for="seller">Vendedor</label>
                    </div>
                </div>
            </div>

            
            <div class="form-item">
                <label >Categorías de interés</label>

                <div class="form-radio">
                    <input  type="checkbox" name="categories" value="electro" id="electro">
                    <label for="electro">Electro</label>
                </div>

                <div class="form-radio">
                    <input  type="checkbox" name="categories" value="fashion" id="fashion">
                    <label for="fashion">Moda</label>
                </div>

                <div class="form-radio">
                    <input  type="checkbox" name="categories" value="home" id="home">
                    <label for="home">Hogar</label>
                </div>

                <div class="form-radio">
                    <input  type="checkbox" name="categories" value="toys" id="toys">
                    <label for="toys">Juguetería</label>
                </div>

                <div class="form-radio">
                    <input  type="checkbox" name="categories" value="health" id="health">
                    <label for="health">Vida sana</label>
                </div>

            </div>

            
            <div class="form-item">
                <label for="photo">Foto de usuario</label>
                <input class="form-field" type="file" type=".jpg,.png,.bmp" id="photo" name="photo">
            </div>

            
            <div class="form-item">
                <label for="password">Contraseña</label>
                <input class="form-field" type="password" id="password" name="password" required minlength="8" maxlength="16">
            </div>

            <div class="form-item">
                <label for="confirm">Confirmar contraseña</label>
                <input class="form-field" type="password" id="confirm" name="confirm"required minlength="8" maxlength="16">
            </div>

            <div class="form-buttons">
                <button type="submit">Enviar</button>
                <button type="reset">Borrar</button>
            </div>
        </form>

    </main>

    <%- include("./partials/footer.ejs") %>

</body>
</html>