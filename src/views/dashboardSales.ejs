<%- include("./partials/dashboard.ejs") %>

<main>

    <section>
        <nav class="dashboard-products-buttons" >

            <button onclick="toggleElement(1)">
                Todas las ventas
            </button>

            <button onclick="toggleElement(2)"> 
                Sin entregar
            </button>
            
        </nav>

        <div class="dashboard-products hidden" id="dashboard-details">

            <div class="table-responsive">
                <table class="table table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th colspan="7"><%= label %></th>
                        </tr>
                        <tr>
                            <%- include("./partials/dashboardSaleHeader.ejs") %>
                            <th>¿Entregado?</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% let counter = 0 %>
                            <% for (const sale of data) { %>
                                <tr>
                                    <% counter = counter + 1 %>
                                    <td><%= counter %></td>
                                    <td>
                                        <%= sale.day %>/<%= sale.month %>/<%= sale.year %>
                                    </td>
                                    <td>
                                        <a href="/dashboard/users/<%= sale.userID %>">
                                            <%= sale.username %>
                                        </a>
                                    </td>
                                    <td>$ <%= toThousand(sale.amount) %></td>
                                    <td>
                                        <%= sale.quantity %>
                                    </td>
                                    <td>
                                        <a href="/dashboard/sales/<%= sale.id %>" class="dashboard-products-buttons">
                                            <button>
                                                Ver Detalle
                                            </button>
                                        </a>
                                    </td>
                                    <td><%= sale.undelivered ? "No" : "Sí" %></td>
                                </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>

        </div>

        <div class="dashboard-products" id="dashboard-table" >

            <div class="table-responsive">
                <table class="table table-bordered" cellspacing="0">
                    <thead>
                        <tr>
                            <th colspan="7"><%= label %></th>
                        </tr>
                        <tr>
                            <%- include("./partials/dashboardSaleHeader.ejs") %>
                            <th>Procesar</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% counter = 0 %>
                            <% for (const sale of data) { %>
                                <% if (sale.undelivered) { %>
                                    <tr>
                                        <% counter = counter + 1 %>
                                        <td><%= counter %></td>
                                        <td>
                                            <%= sale.day %>/<%= sale.month %>/<%= sale.year %>
                                        </td>
                                        <td>
                                            <a href="/dashboard/users/<%= sale.userID %>">
                                                <%= sale.username %>
                                            </a>
                                        </td>
                                        <td>$ <%= toThousand(sale.amount) %></td>
                                        <td><%= sale.quantity %></td>
                                        <td>
                                            <a href="/dashboard/sales/<%= sale.id %>" class="dashboard-products-buttons">
                                                <button>
                                                    Ver Detalle
                                                </button>
                                            </a>
                                        </td>
                                        <td>
                                            <form action="/dashboard/sales/<%= sale.id %>?_method=PUT"  class="dashboard-products-buttons" method="post">
                                                <button>
                                                    Entregar
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% } %>
                            <% } %>
                    </tbody>
                </table>
            </div>

        </div>

    </section>
</main>
</body>
</html>