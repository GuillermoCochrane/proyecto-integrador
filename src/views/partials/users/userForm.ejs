    <div class="form-item big-box">
        <label for="name">Nombre y apellido</label>
        <input class="form-field" type="text" id="name" name="name" value="<%= locals.old ? old.name : null %>"  placeholder="Tony Stark" >
        <span class="login-item error" id="error-name"><%= (locals.errors && errors.name) ? errors.name.msg : null %></span>
    </div>

    <%- include("./userFormMailUsername.ejs") %>

    <div class="form-item">
        <label for="phone">Teléfono</label>
        <input class="form-field" type="number" id="phone" name="phone"  placeholder="6594520439" value="<%= locals.old ? old.phone : null %>" >
        <span class="login-item error" id="error-phone"><%= (locals.errors && errors.phone) ? errors.phone.msg : null %></span>
    </div>

    <div class="form-item">
        <label for="address">Domicilio</label>
        <input class="form-field" type="text" id="address" name="address" placeholder="Calle Falsa 123" value="<%= locals.old ? old.address : null %>">
        <span class="login-item error" id="error-address"><%= (locals.errors && errors.address) ? errors.address.msg : null %></span>
    </div>

    <% if (!isLogged) { %>

        <%- include("./userFormPassword.ejs") %>

        <%- include("./userFormAvatar.ejs") %>
        
    <% } %>

    <div class="form-item big-box">
        <label >Categorías de interés</label>
        <div class="form-radio-container">
            <% for (const category of categories) { %>
                <div class="form-radio">
                    <input  type="checkbox" 
                            name="categories" 
                            value="<%= category.id %>" 
                            id="<%= category.category %>" 
                            <% if (locals.old && old.categories) { %>
                                <% for (const interest of old.categories) { %>
                                    <%= (interest == category.id) ? 'checked' : null %>
                                <% } %>
                            <% } %>
                    >
                    <label for="<%= category.category %>"><%= category.category %></label>
                </div>
            <% } %>
        </div>
        
    </div>

    <%- include("./userFormButtons.ejs") %>