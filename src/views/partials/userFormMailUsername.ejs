<div class="form-item">
    <label for="username">Nombre de usuari@</label>
    <input class="form-field" type="text" id="username" name="username" placeholder="IronMan" value="<%= locals.user ? user.username : null %>">
    <span class="login-item error"><%= (locals.errors && errors.username) ? errors.username.msg : null %></span>
</div>

<div class="form-item">
    <label for="email">E-Mail</label>
    <input class="form-field" type="text" id="email" name="email" placeholder="IronMan@starkinc.com" value="<%= locals.user ? user.email : null %>">
    <span class="login-item error"><%= (locals.errors && errors.email) ? errors.email.msg : null %></span>
</div>
