    <div class="form-item big-box">
        <label for="name">Nombre y apellido</label>
        <input class="form-field" type="text" id="name" name="name" value="<%= locals.user ? user.name : null %>"  placeholder="Tony Stark" >
        <span class="login-item error"><%= (locals.errors && errors.name) ? errors.name.msg : null %></span>
    </div>

    <div class="form-item">
        <label for="username">Nombre de usuari@</label>
        <input class="form-field" type="text" id="username" name="username" placeholder="IronMan" value="<%= locals.user ? user.username : null %>">
        <span class="login-item error"><%= (locals.errors && errors.username) ? errors.username.msg : null %></span>
    </div>

    <div class="form-item">
        <label for="email">E-Mail</label>
        <input class="form-field" type="text" id="email" name="email" placeholder="IronMan@starkinc.com" value="<%= locals.user ? user.email : null %>">
        <span class="login-item error"><%= (locals.errors && errors.email) ? errors.email.msg : null %></span>
    </div>

    <div class="form-item">
        <label for="phone">Teléfono</label>
        <input class="form-field" type="tel" id="phone" name="phone"  placeholder="6594520439" value="<%= locals.user ? user.phone : null %>" >
        <span class="login-item error"><%= (locals.errors && errors.phone) ? errors.phone.msg : null %></span>
    </div>

    <div class="form-item">
        <label for="address">Domicilio</label>
        <input class="form-field" type="text" id="address" name="address" placeholder="Calle Falsa 123" value="<%= locals.user ? user.address : null %>">
        <span class="login-item error"><%= (locals.errors && errors.address) ? errors.address.msg : null %></span>
    </div>

    <div class="form-item">
        <label >Categorías de interés</label>
        <% for (const category of categories) { %>
            <div class="form-radio">
                <input  type="checkbox" 
                        name="categories" 
                        value="<%= category.id %>" 
                        id="<%= category.category %>" 
                        <% if (locals.user && user.categories) { %>
                            <% for (const interest of user.categories) { %>
                                <%= (interest == category.id) ? 'checked' : null %>
                            <% } %>
                        <% } %>
                >
                <label for="<%= category.category %>"><%= category.category %></label>
            </div>
        <% } %>
    </div>
    <% if (!isLogged) { %>
        
        <%- include("./userFormAvatar.ejs") %>

        <%- include("./userFormPassword.ejs") %>
        
    <% } %>

    <div class="form-buttons">
        <button type="submit">Enviar</button>
        <button type="reset">Borrar</button>
    </div>
    <span class="form-item big-box"></span>