    <div class="form-item big-box">
        <label for="name">Nombre y apellido</label>
        <input class="form-field" type="text" id="name" name="name" value="<%= locals.user ? user.name : null %>"  placeholder="Tony Stark" >
    </div>

    <div class="form-item">
        <label for="username">Nombre de usuari@</label>
        <input class="form-field" type="text" id="username" name="username" placeholder="IronMan" value="<%= locals.user ? user.username : null %>">
    </div>

    <div class="form-item">
        <label for="email">E-Mail</label>
        <input class="form-field" type="text" id="email" name="email" placeholder="IronMan@starkinc.com" value="<%= locals.user ? user.email : null %>">
    </div>

    <div class="form-item">
        <label for="phone">Teléfono</label>
        <input class="form-field" type="tel" id="phone" name="phone"  placeholder="6594520439" value="<%= locals.user ? user.phone : null %>" >
    </div>

    <div class="form-item">
        <label for="address">Domicilio</label>
        <input class="form-field" type="text" id="address" name="address" placeholder="Calle Falsa 123" value="<%= locals.user ? user.address : null %>">
    </div>

    <div class="form-item">
        <label for="borndate">Fecha de nacimiento</label>
        <input class="form-field" type="date" id="borndate" name="borndate" value="<%= locals.user ? user.borndate : null %>">
    </div>

    <div class="form-item">
        <label for="photo">Foto de usuario</label>
        <input class="form-field" type="file"  id="photo" name="photo">
        <span class="login-item error"><%= locals.error ? error : null %></span>
    </div>


    <div class="form-item">
        <label >Categorías de interés</label>
        <% for (const category of categories) { %>
            <div class="form-radio">
                <input  type="checkbox" 
                        name="categories" 
                        value="<%= category.id %>" 
                        id="<%= category.category %>" 
                        <% if (locals.user && user.categories) { %>
                            <% for (const interest of user.categories) { %>
                                <%= (interest == category.id) ? 'checked' : null %>
                            <% } %>
                        <% } %>
                >
                <label for="<%= category.category %>"><%= category.category %></label>
            </div>
        <% } %>
    </div>

    <div class="form-item">
        <label>Perfil del usuario</label>
        <% for (const profile of profiles) { %>
            <div class="form-radio">
                <input  type="radio" 
                        id="<%= profile.profile %>"
                        name="profile" 
                        value="<%= profile.id %>" 
                        <%= locals.user &&  (profile.id == user.profile) ? "checked" : null %>
                >
                <label for="<%= profile.profile %>"><%= profile.profile %></label>
            </div>
        <% } %>
    </div>

    <div class="form-item">
        <label for="password">Contraseña</label>
        <input class="form-field" type="password" id="password" name="password" <%= !locals.user  ? "required" : null %> >
    </div>

    <div class="form-item">
        <label for="confirm">Confirmar contraseña</label>
        <input class="form-field" type="password" id="confirm" name="confirm" <%= !locals.user  ? "required" : null %>>
    </div>

    <span class="form-item big-box error"><%= locals.passwordError ? passwordError : null %></span>

    <div class="form-buttons">
        <button type="submit">Enviar</button>
        <button type="reset">Borrar</button>
    </div>
    <span class="form-item big-box"></span>