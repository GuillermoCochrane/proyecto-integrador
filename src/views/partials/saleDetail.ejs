<div class="table-responsive">
    <table class="table table-bordered" cellspacing="0">
        
        <thead>
            <tr>
                <th colspan="5">
                    Detalle de la compra del usuario <a href="/dashboard/users/<%= sale.userID %>"><%= sale.username %></a>
                    , realizada el <%= sale.day %>/<%= sale.month%>/<%= sale.year %>
                </th>
            </tr>
            <tr>
                <th></th>
                <th>Producto</th>
                <th>Precio</th>
                <th>Cantidad</th>
                <th>Total</th>
            </tr>
        </thead>

        <tbody>
                <% for (const product of sale.products) { %>
                    <tr>
                        <% counter = counter + 1 %>
                        <td><%= counter %></td>
                        <td><%= product.name %></td>
                        <td>$<%= toThousand(product.finalPrice) %></td>
                        <td><%= product.quantity %></td>
                        <td>$<%= toThousand(product.amount) %></td>
                    </tr>
                <% } %>
        </tbody>

        <tfoot>
            <tr>
                <th colspan="4">Total de la compra: </th>
                <th>$<%= toThousand(sale.amount) %></th>
            </tr>
        </tfoot>

    </table>
</div>