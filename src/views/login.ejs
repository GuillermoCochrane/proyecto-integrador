<%- include("./partials/head.ejs") %>
<body>

    <%- include("./partials/headerStatic.ejs") %>
    <div class="main-border-form">
        <main>
            <h2 class="title">
                <%= label %>
            </h2>
            <form action="/users/login" method="post" class="login-form" id="login-form">
                <section class="login-form">
                    <div class="login-item">
                        <label for="username">Nombre de usuari@</label>
                        <input type="text" id="username" name="username" value="<%= locals.old ? old : null %>">
                    </div>
                    <span class="login-item error" id="error-username"><%= locals.error && error.username ? error.username.msg : null %></span>

                    <div class="login-item">
                        <label for="password">Contraseña</label>
                        <div class="password-container">
                            <input type="password" id="password" name="password">
                            <i id="iconP" class="fa-regular fa-eye"></i>
                        </div>
                    </div>
                    <span class="login-item error" id="error-password"><%= locals.error && error.password ? error.password.msg : null %></span>

                    <div class="login-options-container">
                        <div class="login-checkbox">
                            <input type="checkbox" name="rememberMe" id="rememberMe">
                            <label for="rememberMe">Recordarme</label>
                        </div>
                        <div class="login-options">
                            <div><a href="/users/register">¿No tienes cuenta? Registrate </a></div>
                            <div><a href="/users/recovery">¿Olvidó su contraseña?</a></div>
                        </div>
                    </div>
                </section>

                <button type="submit" id="login-btn">Enviar</button>
            </form>
        </main>
    </div>

    <%- include("./partials/footer.ejs") %>

</body>
</html>